#!/bin/bash
env GOARCH=amd64 GOOS=darwin go build github.com/evgeny-klyopov/compound-interest-app
mv compound-interest-app comi
tar -cvzf comi.darwin-amd64.tar.gz comi
mv comi macos-comi

env GOARCH=amd64 GOOS=linux go build github.com/evgeny-klyopov/compound-interest-app
mv compound-interest-app comi
tar -cvzf comi.linux-amd64.tar.gz comi
mv comi linux-comi

env GOARCH=amd64 GOOS=windows go build github.com/evgeny-klyopov/compound-interest-app
mv compound-interest-app.exe comi.exe
tar -cvzf comi.windows-amd64.tar.gz comi.exe
mv comi.exe windows-comi.exe